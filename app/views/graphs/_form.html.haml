= form_for @graph do |f|
  -if @graph.errors.any?
    #error_explanation
      %h2= "#{pluralize(@graph.errors.count, "error")} prohibited this graph from being saved:"
      %ul
        - @graph.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :service
    = f.text_field :service
  .field
    = f.label :section
    = f.text_field :section
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :color
    = f.text_field :color
  .field
    = f.label :ttl
    = f.text_field :ttl
  .actions
    = f.submit 'Save', :class => 'btn btn-primary'
