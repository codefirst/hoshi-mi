- @graphs.group_by{|g| g.service }.each do|service, xs|
  %h3= service
  - xs.group_by{|g| g.section }.each do|section, ys|
    %h4= section
    %table.table.table-striped
      - ys.each do|graph|
        %tr
          %td= link_to graph.name, graph
          %td.color= graph.color
          %td.created-by= user_link graph.created_by

%br

= link_to 'New Graph', new_graph_path, :class => 'btn btn-primary' if user_signed_in?
