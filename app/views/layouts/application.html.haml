!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Hoshi-mi"
    = favicon_link_tag 'favicon.ico'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    %link{:href => image_path("apple-touch-icon-144x144.png"), :rel => "apple-touch-icon-precomposed", :sizes => "144x144"}
    %link{:href => image_path("apple-touch-icon-114x114.png"), :rel => "apple-touch-icon-precomposed", :sizes => "114x114"}
    %link{:href => image_path("apple-touch-icon-72x72.png"), :rel => "apple-touch-icon-precomposed", :sizes => "72x72"}
    %link{:href => image_path("apple-touch-icon.png"), :rel => "apple-touch-icon-precomposed"}

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Hoshi-mi", root_path, {:class => "brand"}
          .container.nav-collapse
            %ul.nav
              %li= link_to "Top", root_path
              %li= link_to "Graphs", url_for(:action => :index, :controller => :service)
              %li= link_to "Docs", "https://hoshi-mi.readthedocs.org"
            %ul.nav.pull-right
              - if user_signed_in?
                %li= user_link current_user
                %li= link_to "Logout", destroy_user_session_path
              - else
                %li= link_to "Login", user_omniauth_authorize_path(Settings.omniauth.provider.to_sym)

    .container

      .content
        .row
          .span9
            = bootstrap_flash
            = yield
          .span3
            .well.sidebar-nav
              %h3 Menu
              %ul.nav.nav-list
                %li= link_to "Top", root_path
                %li= link_to "Graphs", url_for(:action => :index, :controller => :service)
                %li= link_to "Docs", "https://hoshi-mi.readthedocs.org"

      %footer
        %p Copyright (C) 2012 <a href='http://www.codefirst.org/'>codefirst.org</a>. All rights reserved.
    = javascript_include_tag "application"
    = yield :javascript

